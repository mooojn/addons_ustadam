<odoo>

    <record id="view_question_form" model="ir.ui.view">
        <field name="name">ustadam.question.form</field>
        <field name="model">ustadam.question</field>
        <field name="arch" type="xml">
            <form string="Question">
                <sheet>
                    <group>
                        <field name="content"/>
                        <field name="option_id">
                            <tree string="Options">
                                <field name="content"/>
                                <field name="is_correct"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_question_tree" model="ir.ui.view">
        <field name="name">ustadam.question.tree</field>
        <field name="model">ustadam.question</field>
        <field name="arch" type="xml">
            <tree string="Question">
                <field name="content"/>
            </tree>
        </field>
    </record>
</odoo>